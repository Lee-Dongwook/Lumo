{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "baseUrl": "./src",
    "paths": {
      "@shared/*": ["./*"]
    }
  },
  "include": ["src"]
}
