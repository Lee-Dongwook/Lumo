{
  "expo": {
    "name": "lumo",
    "slug": "lumoapp",
    "version": "1.0.5",
    "scheme": "lumo",
    "jsEngine": "hermes",
    "platforms": ["ios", "android"],
    "orientation": "portrait",
    "ios": {
      "bundleIdentifier": "com.leedongwook.expoapp",
      "usesAppleSignIn": true,
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        },
        "NSCameraUsageDescription": "사진을 촬영합니다.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.leedongwook.expoapp",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "userInterfaceStyle": "automatic",
    "plugins": ["expo-localization", ["expo-splash-screen", {}], "expo-router"]
  }
}
